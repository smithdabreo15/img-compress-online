    }
    h1 {
      text-align: center;
    }
    input[type="file"],
    input[type="range"] {
      width: 100%;
      margin: 10px 0;
    }
    img {
      max-width: 100%;
      height: auto;
      display: block;
      margin-top: 10px;
    }
    .ad-container {
      margin: 20px 0;
      text-align: center;
    }
    .compressed-image {
      margin-top: 20px;
    }
  </style>
  <!-- Google AdSense -->
